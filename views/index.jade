include ../html/bootstrap.html
include ../html/imports.html

#header

.panel#RRContainer
	.panel#RRTools
		.pane#RRAddRiderForm
			h3 Add A Rider
			.name Name
				br
				textarea(rows=1,id="requestee")
			.phone Phone
				br
				textarea(rows=1,id="phone_number")
			.num_riders Number of Riders
				br
				textarea(rows=1,id="num_riders")
			.address Pick-Up Address
				br
				textarea(rows=3,id="pick_up_address")
			.address Drop-Off Address
				br
				textarea(rows=3,id="drop_off_address")
			.submit
				input(type="submit",id="trip_request", class="btn")
		.pane#RRChat
			.chat
				iframe(src="https://talkgadget.google.com/talkgadget/client", class="chat")
		.pane#RRMap
			.map_div
				include ../html/google_maps.html
	.pane#RRSpreadsheet
		.span12
			include ../html/spreadsheet.html

	footer(class="footer")
		img(src="/images/logo.jpg", style="display:none;")
		#spreadsheet_data
